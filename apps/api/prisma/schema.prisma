generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  timezone  String   @default("America/Chicago")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Service {
  id         String   @id @default(cuid())
  name       String   @unique
  priceCents Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  tasks      Task[]
}

model Team {
  id        String   @id @default(cuid())
  name      String   @unique
  colorHex  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Task {
  id                String   @id @default(cuid())
  customerName      String
  serviceId         String?
  service           Service? @relation(fields: [serviceId], references: [id])
  servicePriceCents Int?     // per-task price override (cents); if null and serviceId set, defaults to Service.priceCents
  address           String?
  description       String?
  notes             String?
  startAt           DateTime
  endAt             DateTime
  allDay            Boolean  @default(false)
  assignedTeamId    String?
  assignedTeam      Team?    @relation(fields: [assignedTeamId], references: [id])
  createdById       String
  createdBy         User     @relation(fields: [createdById], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  rrule             String?  // iCalendar RRULE; null = one-time
}
