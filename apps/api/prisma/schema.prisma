generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  timezone  String   @default("America/Chicago")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Service {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
  taskOverrides TaskOverride[]
}

model Team {
  id        String   @id @default(cuid())
  name      String   @unique
  colorHex  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
  taskOverrides TaskOverride[]
}

model Customer {
  id        String   @id @default(cuid())
  fullName  String
  address   String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
  taskOverrides TaskOverride[]
}

model Task {
  id                String   @id @default(cuid())
  customerName      String
  customerId        String?
  customer          Customer? @relation(fields: [customerId], references: [id])
  address           String?
  phone             String?
  serviceId         String?
  service           Service? @relation(fields: [serviceId], references: [id])
  servicePriceCents Int?     // per-task price (cents)
  description       String?
  notes             String?
  startAt           DateTime
  endAt             DateTime
  allDay            Boolean  @default(false)
  assignedTeamId    String?
  assignedTeam      Team?    @relation(fields: [assignedTeamId], references: [id])
  createdById       String
  createdBy         User     @relation(fields: [createdById], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  rrule             String?  // iCalendar RRULE (RRULE only, no EXDATE); null = one-time
  exDates           DateTime[] // Excluded occurrence dates (for "delete only this")
  deletedAt         DateTime?  // Soft delete
  overrides         TaskOverride[] // Overridden occurrences (for "edit only this")
}

model TaskOverride {
  id                String   @id @default(cuid())
  seriesId          String   // FK to Task.id (the recurring series)
  originalStartAt   DateTime // The occurrence date/time being overridden
  // Overridden fields (null = use series default)
  customerName      String?
  customerId        String?
  customer          Customer? @relation(fields: [customerId], references: [id])
  address           String?
  phone             String?
  serviceId         String?
  service           Service? @relation(fields: [serviceId], references: [id])
  servicePriceCents Int?
  description       String?
  notes             String?
  startAt           DateTime? // Can be different if user "moves" only this occurrence
  endAt             DateTime?
  allDay            Boolean?
  assignedTeamId    String?
  assignedTeam      Team?    @relation(fields: [assignedTeamId], references: [id])
  deletedAt         DateTime? // Soft delete (for "delete only this")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  series            Task     @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  
  @@unique([seriesId, originalStartAt]) // One override per occurrence
  @@index([seriesId])
  @@index([originalStartAt])
}
